<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="@color/blue_gradient_2_ripple" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="3dp" />
                <gradient
                    android:angle="360"
                    android:centerColor="@color/blue_gradient_3"
                    android:endColor="@color/blue_gradient_3"
                    android:startColor="@color/blue_gradient_2"
                    android:type="linear" />
            </shape>
        </clip>
    </item>

</layer-list>