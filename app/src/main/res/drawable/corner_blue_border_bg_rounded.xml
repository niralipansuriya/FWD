<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="360"
                android:centerColor="@color/blue_gradient_2"
                android:endColor="@color/blue_gradient_3"
                android:startColor="@color/blue_gradient_2"
                android:type="linear" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>