<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgDialogGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/rectangle" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgOptions"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        app:layout_constraintEnd_toEndOf="@id/btnUnmatch"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/more"
        app:tint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUnmatch"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="end|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/unmatch"
        android:textAppearance="@style/AppTheme.RegularFont"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgOptions" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBlock"
        style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/block_report"
        android:textAppearance="@style/AppTheme.RegularFont"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/btnUnmatch"
        app:layout_constraintTop_toBottomOf="@id/btnUnmatch" />

</androidx.constraintlayout.widget.ConstraintLayout>