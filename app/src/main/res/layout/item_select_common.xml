<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPreference"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="20dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/grey_border_bg"
    android:padding="5dp">
<!--    android:layout_height="wrap_content"-->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPreference"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/aries" />

    <TextView
        android:id="@+id/txtPreferenceName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:lineSpacingExtra="3dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@{item}"
        android:textAppearance="@style/AppTheme.RegularFont"
        android:textColor="@color/colorPagerDesc"
        android:textColorHint="@color/colorGrey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgPreference"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="24dp"
        tools:text="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
