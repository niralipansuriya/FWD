    <declare-styleable name="SwipeDeck">
        <attr name="max_visible" format="integer" />
        <attr name="rotation_degrees" format="float" />
        <attr name="card_spacing" format="dimension" />
        <attr name="render_above" format="boolean" />
        <attr name="render_below" format="boolean" />
        <attr name="opacity_end" format="float" />
        <attr name="card_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <!--  Rounded ImageView  -->
    <declare-styleable name="RoundedImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="reverseMask" format="boolean" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="8" />
            <flag name="topRight" value="4" />
            <flag name="bottomLeft" value="2" />
            <flag name="bottomRight" value="1" />
            <flag name="top" value="12" />
            <flag name="bottom" value="3" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <!--  Range Seekbar  -->
